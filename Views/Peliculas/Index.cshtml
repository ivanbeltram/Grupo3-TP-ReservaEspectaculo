@model IEnumerable<ORT_PNT1_Proyecto_2022_2C_I_ReservaEspectaculo.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<p></p>

<h2>Películas</h2>

@if (User.IsInRole(Configs.Empleado))
{
    <p>
        <a asp-action="Create">Crear una nueva película</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaLanzamiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaLanzamiento)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Ver detalles</a>
                    @if (User.IsInRole(Configs.Empleado))
                    {
                         <a> | </a><a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
@model ORT_PNT1_Proyecto_2022_2C_I_ReservaEspectaculo.Models.Sala

@{
    ViewData["Title"] = "Edit";
}

<p></p>

<h4>Modificar la sala</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="NumeroDeSala" />
            <div class="form-group">
                <label asp-for="TipoSala" class="control-label"></label>
                <input asp-for="TipoSala" class="form-control" />
                <span asp-validation-for="TipoSala" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CapacidadButacas" />
            <input type="hidden" asp-for="ButacasDisponibles" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Confirmada" /> @Html.DisplayNameFor(model => model.Confirmada)
                </label>
            </div>
            <input type="hidden" asp-for="PeliculaId" />
            <input type="hidden" asp-for="Fecha" />
            <p></p>
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p></p>
<div>
    <a asp-controller="Salas" asp-action="Details" asp-route-id=@Model.Id>Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}